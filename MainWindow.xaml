<Window x:Class="Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        Title="❤️CRUD System"
        Height="550"
        Width="800"
        BorderThickness="2" 
        ui:WindowHelper.UseModernWindowStyle="True" Loaded="Window_Loaded">
    <Window.BorderBrush>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop x:Name="AccentColorBrush" Color="White" Offset="0"/>
            <GradientStop x:Name="AccentColorBrushDarker" Color="AliceBlue" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>
    <Grid>
        <ui:Frame x:Name="ContentView" NavigationUIVisibility="Hidden" Opacity="1.0"/>
    </Grid>
</Window>
