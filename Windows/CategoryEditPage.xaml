<Page x:Class="Shop.Windows.CategoryEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shop.Windows" xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="CategoryEditPage">
    <Grid>
        <ui:SimpleStackPanel Width="250" Spacing="5" VerticalAlignment="Center">
            <Label Content="Name" Foreground="White" x:Name="CategoryName"/>
            <TextBox x:Name="category_name"  HorizontalAlignment="Center" Width="250" ui:ControlHelper.PlaceholderText="Name"/>
            <Label Content="ID" Foreground="White"/>
            <TextBox x:Name="categoryID" IsEnabled="False" HorizontalAlignment="Center" Width="250" ui:ControlHelper.PlaceholderText="ID" />
            <ui:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="30">
                <Button Content="Delete" Width="80" Click="Button_Click_1" />
                <Button Content="Save" Width="80" Click="Button_Click"  />
            </ui:SimpleStackPanel>
        </ui:SimpleStackPanel>
    </Grid>
</Page>
