<UserControl x:Class="Shop.Controls.ContexMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shop.Controls" xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="120">
    <Grid>
        <ui:SimpleStackPanel Spacing="20" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" >
                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" Foreground="White"/>
            </Button>
            <Button Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click_1" >
                <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;" Foreground="White"/>
            </Button>
        </ui:SimpleStackPanel>
    </Grid>
</UserControl>
